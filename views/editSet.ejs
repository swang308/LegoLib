<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="author" content="SHAN-YUN, WANG" />

  <title>Edit Set - <%= set.name %></title>

  <link rel="stylesheet" href="/css/main.css" />
</head>

<body class="font-mono">
    <%- include('partials/navbar', {page: '' }) %>

    <main>
      <header>
        <div class="bg-base-200 p-10">
          <div class="hero-content text-center">
            <div class="max-w-md">
              <h1 class="text-5xl font-bold">Edit Set</h1>
              <p class="py-6">Fill the form below.</p>
            </div>
          </div>
        </div>
      </header>
    </main>
    <h2 class="text-center p-12"><%= set.name %></h2>
    <div class="p-12 justify-around flex">
        <form action="/lego/editSet" method="post">
          <div class="p-5">
            <label class="input input-bordered flex items-center gap-2">
              Name
              <input type="text" id="name" name="name" value="<%= set.name %>" required>
            </label>
          </div>
          <div class="p-5">
            <label class="input input-bordered flex items-center gap-2">
              Year
              <input type="number" id="year" name="year" value="<%= set.year %>" required>
            </label>
          </div>
          <div class="p-5">
            <label class="input input-bordered flex items-center gap-2">
              Number of Parts
              <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required>
            </label>
          </div>
          <div class="p-5">
            <label class="input input-bordered flex items-center gap-2">
              Image URL
              <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required>
            </label>
          </div>
          <div class="p-5">
            <label class="input input-bordered flex items-center gap-2">
              Theme
              <select id="theme_id" name="theme_id" class="select select-bordered w-full max-w-xs" required>
                <% themes.forEach(theme => { %>
                    <option value="<%= theme.id %>" <%= set.theme_id == theme.id ? 'selected' : '' %>><%= theme.name %></option>
                <% }) %>
            </select>
            </label>
          </div>
          <div class="p-5">
            <label class="input input-bordered flex items-center gap-2">
              Set Number
            <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly>
            </label>
          </div>
          <div class="p-5 justify-self-center">
            <button type="submit" class="btn btn-primary">Update</button>
            <button class="btn btn-neutral">
                <a href="/lego/deleteSet/<%= set.set_num %>" onclick="return confirm('Delete Comfim?');">Delete</a>
            </button>
          </div>
        </form>
      </div>
</body>
</html>